<container>
    <div class="row">
        <div class="col-md-12">
            <h2 style="padding-left:10px">Instructions</h2>
            <p style="padding-left:25px">Please enter a word: </p>
        </div>
    </div>
</container>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h3>Input</h3>
            <section style="text-align:center">
                <form name=frm>
                    Word to Test :<input type="text" name="word" size="20">
                </form>
            </section>
        </div>
        <div class="col-sm-4">
            <h3>Test</h3>
            <section style="text-align:center">
                <input type="button" class="btn btn-primary" value="Test" onclick="palindrome()" />
            </section>
           </div>
<div class="col-sm-4">
                <h3>Code</h3>
                <section style="text-align:center">
                    <h5>Palindrome Test</h5>
                    <a href="" data-toggle="modal" data-target="#max"> Show Code</a>

                    <div class="modal fade" id="max" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Close</button>
                                    <h1 class="modal-title" id="myModalLabel" style="font-size:50px;">Palindrome Code</h1>
                                </div>
                                <div class="modal-body col-sm-12">
                                    <pre class="brush: js; gutter: false; toolbar: false;">
            function palindrome() {
                var word = document.frm.word.value;
                var ccount = word.length;
                if (word.length > 2) {
                    for (var x = 0; x < ccount; x++) {
                        if (word[x] != word.slice(-1 - x)[0]) {
                            alert("Entry is not a palindrome.");
                            return false;
                        }
                    }
                    alert("The entry is a palindrome.");
                    return true;
                }
            }
                    </pre>
                                </div>
                                <div class="modal-footer no-margin">
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
